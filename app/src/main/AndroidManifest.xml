<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.krraju.fifthgear">
    <!-- User Permissions -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />

    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:targetApi="q">
        <activity android:name=".edituser.EditUserDetailsActivity"></activity>
        <activity android:name=".dueamount.DueAmountActivity" />
        <activity android:name=".statistics.StatisticActivity" />
        <activity android:name=".editfees.EditFees" />
        <activity android:name=".userdetails.UserDetails" />
        <activity android:name=".viewuser.ViewUser" /> <!-- Home Screen -->
        <activity
            android:name=".homescreen.HomeScreen"
            android:screenOrientation="portrait" /> <!-- Add New User Screen -->
        <activity
            android:name=".addnewuser.AddNewUser"
            android:screenOrientation="portrait" /> <!-- Flash Screen -->
        <activity
            android:name=".FlashScreenActivity"
            android:theme="@style/FlashScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>